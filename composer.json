{
    "name": "wearesho-team/turbosms-message-delivery",
    "description": "Turbosms message delivery integration",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Roman Varkuta",
            "email": "roman.varkuta@gmail.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^6.3",
        "horat1us/environment-config": "^1.3",
        "meng-tian/async-soap-guzzle": "^0.2.4",
        "wearesho-team/message-delivery": "^1.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Wearesho\\Delivery\\TurboSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wearesho\\Delivery\\TurboSms\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "cover": "phpunit --coverage-clover=coverage.xml",
        "test": "phpunit"
    }
}
